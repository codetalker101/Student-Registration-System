<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Orangtua</title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
        <link href="css/adminTemplates/styles.css" rel="stylesheet" />
        <link href="css/button/button.css" rel="stylesheet"/>
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="/adminDashboard">SDN 1 Sumbang</a>
            
            
            <!-- INCLUDE NAVBAR -->
            <%- include("../include/_navbar.ejs") %>
            
             
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">


            <!--INCLUDE SIDEBAR-->
            <%- include("../include/_adminSidebar.ejs") %>


            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Data Orangtua</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/adminDashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active">Orangtua</li>
                        </ol>
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Tabel Data Orangtua Peserta Didik
                                <button class="button-22" role="button">Cetak Data</button>
                                </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nama Peserta Didik</th>
                                            <th>Nama Ayah</th>
                                            <th>Nama Ibu</th>
                                            <th>Nama Wali</th>
                                            <th>Tanggal Ubah</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nama Peserta Didik</th>
                                            <th>Nama Ayah</th>
                                            <th>Nama Ibu</th>
                                            <th>Nama Wali</th>
                                            <th>Tanggal Ubah</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                      <% if (Array.isArray(data) && data.length > 0) { %>
                                        <% data.forEach(row => { %>
                                          <tr> 
                                              <td><%= row.ortu_id %></td>
                                              <td><%= row.nama_lengkap %></td>
                                              <td><%= row.nama_ayah %></td>
                                              <td><%= row.nama_ibu %></td>
                                              <td><%= row.nama_wali %></td>
                                              <td><%= row.last_login %></td>
                                              <td>
                                                <button class="button-23" role="button"><img src="icons/edit_icon.png"></button>
                                                <button class="button-23" role="button"><img src="icons/delete_icon.png"></button>
                                              </td>
                                          </tr>
                                        <% }) %>
                                      <% } else { %>
                                        <li>No data available</li>
                                      <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; SDN 1 Sumbang</div>
                            <div>
                                <a href="#">Privacy Policy</a>
                                &middot;
                                <a href="#">Terms &amp; Conditions</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
        <script src="js/datatables-simple-demo.js"></script>
    </body>
</html>
